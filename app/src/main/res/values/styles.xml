<!--        <item name="colorAccent">@color/colorAccent</item>-->
<!--        <item name="android:fontFamily">@font/pacifico_family</item>-->
<!--    </style>-->

    <style name="AppTheme.Blue" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_light</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue_dark</item>
        <item name="android:fontFamily">@font/pacifico_family</item>
    </style>

    <style name="MyButton" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/btn_round</item>
        <item name="android:paddingHorizontal">@dimen/button_padding_horizontal</item>
        <item name="android:paddingVertical">@dimen/button_padding_vertical</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
    </style>

    <style name="MyEditText" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">sans-serif</item>
    </style>

<!--    Text View-->
    <style name="SingleLineRoundBackground" parent="android:Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2.MyBody2</item>
        <item name="android:padding">@dimen/default_chip_padding</item>
        <item name="android:background">@drawable/edt_round</item>
        <item name="android:maxWidth">100dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

<!--    Text View-->

<!--    Text Appearances-->
    <style name="MyHeadline6" parent="TextAppearance.MaterialComponents.Headline6"/>
    <style name="MyHeadline6.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyHeadline5" parent="TextAppearance.MaterialComponents.Headline5"/>
    <style name="MyHeadline5.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyHeadline3" parent="TextAppearance.MaterialComponents.Headline3"/>
    <style name="MyHeadline3.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.MaterialComponents.Body2.MyBody2">
        <item name="android:textColor">@color/normal_text</item>
    </style>

    <style name="ToolbarText" parent="MyHeadline6">
        <item name="android:textColor"></item>
    </style>
<!--    Text Appearances-->

<!--    Action bar-->
    <style name="MyActionBarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColor">@color/action_bar_text_color</item>
    </style>
<!--    Action bar-->
</resources>
